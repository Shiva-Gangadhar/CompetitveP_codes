#include<bits/stdc++.h>
using namespace std;

int n;

vector<int> bit;

void update(int id,int val){
	while(id<=n){
		bit[id]+=val;
		id += (id & (-id));
	}
}

int query(int id){
	int ans=0;
	while(id>0){
		ans+=bit[id];
		id -= (id & (-id));
	}
	return ans;
}

int main(){
	cin>>n;
	bit = vector<int>(n+1,0);
	vector<int> a(n+1);
	for(int i=1;i<=n;i++){
		cin>>a[i];
		update(i,a[i]);
	}
	int q;
	cin>>q;
	while(q--){
		int type;
		cin>>type;
		if(type==1){
			int l,r;
			cin>>l>>r;
			cout<<query(r)-query(l-1);
			cout<<ans<<endl;
		}
		else{
			int id,val;
			cin>>id>>val;
			update(id,-a[id]);
			a[id]=val;
			update(id,a[id]);
		}
	}
	return 0;
}
